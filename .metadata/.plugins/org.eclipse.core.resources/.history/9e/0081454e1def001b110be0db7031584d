package circec;


public class Interseccion {	
	public class App {
		public static void main(String[] args) {
			Punto Centro1 = new Punto();
			Punto Centro2 = new Punto ();
			Punto Distancia = new Punto ();
			double DistanciaEntreCentros;
			Circulo C1C2 = new Circulo ();
			boolean Intersección;
			
			Centro1.AsignarCoordenadasAlCentro1(1, 1);
			Centro2.AsignarCoordenadasAlCentro2(7, 7);
			System.out.println("-> La distancia entre los centros es de:");
			DistanciaEntreCentros = Distancia.CalcularDistanciaEntreCentros(1, 1, 7, 7);
			System.out.println(DistanciaEntreCentros);
			System.out.println("-> ¿Existe Intersección?:");
			Intersección = C1C2.HayIntersección(DistanciaEntreCentros, 2, 2);
			System.out.println(Intersección);
		}
}	
}