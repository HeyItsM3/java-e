package paquete;

import static org.junit.Assert.*;

import org.junit.Test;


import static org.junit.Assert.assertEquals;

public class ProgramTest {
	@Test
	public void test1() {
		assertEquals(3, Program.contarPalabras("It's high noon"));
	}

	@Test
	public void test2() {
		assertEquals(4, Program.contarPalabras("Is this easy mode"));
	}

	@Test
	public void test3() {
		assertEquals(5, Program.contarPalabras("What an easy task, right"));
	}

	@Test
	public void test4() {
		assertEquals(4, Program.contarPalabras("This is a test"));
	}

	@Test
	public void test5() {
		assertEquals(6, Program.contarPalabras("Just an example here move along"));
	}

	@Test
	public void test6() {
		assertEquals(4, Program.contarPalabras("How are you today?"));
	}
}